<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ubb.controller.FriendSelectorController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Select a friend" style="-fx-font-size: 16px;"/>

    <ListView fx:id="friendsList" prefHeight="250" prefWidth="220"/>

    <Button text="Open Chat" onAction="#handleOpenChat"/>

</VBox>
